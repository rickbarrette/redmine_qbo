<h1>Customers</h1> 
<br/> 
<% @customers.each do |c| %>
  <div class="row">
    <div class="span6 columns">
      <fieldset>
        <% @customer = c.name%>
        <%= render :partial => 'customers/details' %>
      </fieldset>
    </div>
  </div>
<% end %>

<%= @customer_pages %>

<div class="actions">
  <%= button_to "New", new_customer_path, method: :get %>       
</div>
