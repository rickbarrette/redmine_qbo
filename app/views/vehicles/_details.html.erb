<table>
  <tbody>
    <tr>
      <th>Customer</th>
      <td><%= @customer %></td>
    </tr>
    
    <tr>
      <th>Vehicle</th>
      <td><%= @vehicle.to_s %></td>
    </tr>
    
    <tr>
      <th>VIN</th>
      <td><%= @vehicle.vin %></td>
    </tr>
    
    <tr>
      <th>Style</th>
      <td><%= @vehicle.details['years'][0]['styles'][0]['name'] if @vehicle.details? %></td>
    </tr>
    
    <tr>
      <th>Drive</th>
      <td><%= @vehicle.details['drivenWheels'] if @vehicle.details? %></td>
    </tr>
    
    <tr>
      <th>Doors</th>
      <td><%= @vehicle.details['numOfDoors'] if @vehicle.details? %></td>
    </tr>
  
    <tr>
      <th>Notes</th>
      <td><%= @vehicle.notes %></td>
    </tr>
    
    <tr>
      <td/>
      <td>
        <%= button_to "Edit", edit_vehicle_path(@vehicle), method: :get%> 
        <%= button_to "Delete", @vehicle, method: :delete, data: {confirm: "You sure?"} %> 
      </td>
    </tr>
  </tbody>
</table>
