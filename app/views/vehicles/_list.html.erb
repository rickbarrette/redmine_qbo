<% @vehicles.each do |vehicle| %>
  <div class="row">
    <div class="span6 columns">
      <fieldset>
        <%= vehicle.to_s %>
        <br/>
        <%= vehicle.customer %>
        <br/>
        <%= vehicle.vin %>
        <br/>
        <div style="float: right;" >
          <%= button_to "More", vehicle_path(vehicle), method: :get %>
        </div>
      </fieldset>
    </div>
  </div>
<% end %>

<br/>

<div class="actions">
  <%= will_paginate @vehicles %>
  <%= button_to "New Vehicle", new_vehicle_path, method: :get %>       
</div>
